    <nav class="bg-dark navbar-dark">
  </nav>
   <section id="header" class="jumbotron text-center">
     <h1 class="display-3">My Gallery</h1>
</section>

<div class="container">
    <form action="/new" method="POST">
    <div class="form-group">
        <label for="imgName">Image Name:</label>
        <input type="text" class="form-control" name="imageName" placeholder="Enter image name" id="imgName" required>
    </div>
    <div class="form-group">
        <label for="imgUrl">Image URL:</label>
        <input type="text" class="form-control" name="imageUrl" placeholder="Enter image url" id="imgUrl" required>
    </div>
    <div class="form-group">
        <label for="imgDetail">Image Detail:</label>
        <textarea class="form-control" name="imageDetail" placeholder="Enter image deatil" id="imgDetail" required></textarea>
    </div>
    
    <button type="submit" class="btn btn-primary">Add Image</button>
    </form>
</div>

